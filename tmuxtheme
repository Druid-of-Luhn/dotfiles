# #!/bin/bash
#
# TMUX Theme
#
# Colours
tm_yellow="colour3"
tm_black="colour0"
tm_grey="colour252"
tm_fyellow_bblack="#[fg=$yellow,bg=$tm_black]"
tm_fblack_byellow="#[fg=$tm_black,bg=$tm_yellow]"
tm_fgrey_bblack="#[fg=$tm_grey,bg=$tm_black]"
tm_fblack_bgrey="#[fg=$tm_black,bg=$tm_grey]"

# Pane border colours
set -g pane-active-border-fg $tm_yellow
set -g pane-active-border-bg $tm_yellow
set -g pane-border-fg $tm_black
set -g pane-border-bg $tm_black
# Pane number display
set -g display-panes-active-colour $tm_yellow
set -g display-panes-colour $tm_grey

# Messages
set -g message-fg $tm_grey
set -g message-bg $tm_black
set -g message-command-fg $tm_grey
set -g message-command-bg $tm_black

# Status line
set -g status "on"
set -g status-fg $tm_grey
set -g status-bg $tm_black
set -g status-justify "centre"
set -g status-utf8 "on"
set -g status-left-length "100"
set -g status-right-length "100"

# Left Status
tm_host="$tm_fblack_byellow ♣︎ #H $tm_fyellow_bblack"
tm_session="$tm_fgrey_bblack s:#S"
set -g status-left "$tm_host$tm_session"

# Right Status
tm_right_sep="$tm_fgrey_bblack"
tm_time="$tm_fblack_bgrey %R"
tm_date="%Y-%m-%d "
set -g status-right "$tm_right_sep$tm_time  $tm_date"

# Windows
setw -g window-status-separator ""
setw -g window-status-fg $tm_grey
setw -g window-status-bg $tm_black
setw -g window-status-activity-fg $tm_grey
setw -g window-status-activity-bg $tm_black

tm_window=" #I:#W "
setw -g window-status-format "$tm_fgrey_bblack$tm_window"
setw -g window-status-current-format "$tm_fyellow_bblack#[underscore]$tm_window"
